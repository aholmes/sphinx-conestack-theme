@import 'bootstrap.css';
@import url("https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css");

#cone-navbar {
    background: {{ theme_header_bg_color }};
}
#cone-navbar *:not(#searchbox *) {
    color: {{ theme_header_color }};
}

body {
    width: 100vw;
    height: 100vh;
    background-color: var(--bs-body-bg);
}

#navbar-toggle {
    color: var(--bs-white);
}

.cone-main {
    grid-area: main;
}

#nav_links path {
    fill: {{ theme_header_color }};
}
#nav_links svg {
    width: 24px;
}

.cone-relbar {
    line-height: 2;
}
.cone-relbar a,
a:visited {
    text-decoration: none;
    color: var(--bs-gray-800);
}
.cone-relbar a:active,
a:hover {
    text-decoration: none;
    color: {{ theme_header_bg_color }};
}

#header {
    color: {{ theme_header_color }};
    background: {{ theme_header_bg_color }};
    box-shadow: 0 0.5rem 1rem rgb(0 0 0 / 5%), inset 0 -1px 0 rgb(0 0 0 / 15%);
    height: 64px;
}

#logo > img {
    height: 40px;
}
#logo > span {
    font-size: 1.3em;
}

#logo,
#logo:active,
#logo:hover,
#logo:visited {
    color: {{ theme_header_color }};
    text-decoration: none;
}

#searchbox {
    max-width: 300px;
}

@media (min-width: 992px) {
    #cone-layout {
        grid-template-columns: 1fr 5fr;
    }
}

@media (min-width: 768px) {
    #cone-navbar {
        display: none;
    }
    #cone-layout {
        display: grid;
        gap: 1.5rem;
        grid-template-areas: "sidebar main";
        grid-template-columns: 1fr 3fr;
    }
}
@media (max-width: 768px) {
    #cone-layout {
        padding: 1rem;
    }
    #searchbox {
        max-width: none;
        color: black;
    }
    .cone-title {
        float: none!important;
    }
}

#cone-sidebar {
    grid-area: sidebar;
    background: white;
}

@media (min-width: 768px) {
    #cone-docs-nav {
        position: -webkit-sticky;
        position: sticky;
        top: 5rem;
        display: block !important;
        height: calc(100vh - 7rem);
        padding-left: .25rem;
        margin-left: -.25rem;
        overflow: auto;
        font-weight: 600;
    }
}

.cone-title {
    float: left;
}
