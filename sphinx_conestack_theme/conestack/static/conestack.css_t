@import 'bootstrap.css';
@import "bootstrap-icons/bootstrap-icons.css";

/** general **/
body {
    width: 100vw;
    height: 100vh;
    background-color: var(--bs-body-bg);
}

/** header **/
#header {
    color: {{ theme_header_color }};
    background: {{ theme_header_bg_color }};
    box-shadow: 0 0.5rem 1rem rgb(0 0 0 / 5%), inset 0 -1px 0 rgb(0 0 0 / 15%);
    height: 64px;
}

/* logo */
#logo,
#logo:active,
#logo:hover,
#logo:visited {
    margin-left: 2rem;
    overflow: hidden;
    text-overflow: ellipsis;
    color: {{ theme_header_color }};
    text-decoration: none;
}
#logo > img {
    height: 40px;
}
#logo > span {
    font-size: 1.3em;
}

/* searchbox */
#searchbox {
    max-width: 300px;
}

/* navbar */
#cone-navbar {
    background: {{ theme_header_bg_color }};
}
#cone-navbar *:not(#searchbox *) {
    color: {{ theme_header_color }};
}
#navbar-toggle {
    color: var(--bs-white);
}
#nav_links path {
    fill: {{ theme_header_color }};
}
#nav_links svg {
    width: 24px;
}

/** sidebar **/
#cone-sidebar {
    grid-area: sidebar;
    background: white;
}

/* navtree */
#cone-docs-nav a,
#cone-docs-nav a:visited {
    text-decoration: none!important;
    color: var(--bs-gray-800);
}
#cone-docs-nav a:active,
#cone-docs-nav a:hover {
    text-decoration: none;
    color: {{ theme_header_bg_color }};
}
#cone-docs-nav > ul {
    padding-left: 0;
}
#cone-docs-nav ul {
    list-style: none;
    margin-bottom: .2rem;
}
#cone-docs-nav li.toctree-l1 {
    margin-bottom: 0.3rem;
}
#cone-docs-nav .toctree-l1.current > a {
    color: {{ theme_header_bg_color }};
}
#cone-docs-nav .topless {
    margin-bottom: .3rem;
}
#cone-docs-nav .current > ul a,
#cone-docs-nav .previous a,
#cone-docs-nav .next a {
    font-size: 14px;
}
#cone-docs-nav ul ul {
    padding-left: 1rem;
}
#cone-docs-nav .toctree-l1 {
    font-weight: 600;
}
#cone-docs-nav .toctree-l1 li {
    font-weight: 300;
}
#cone-docs-nav > ul:last-of-type::after {
    content: '';
    width: 100%;
    border-bottom: 1px solid grey;
    margin: .5rem 0;
    display: block;
}

/* relations */
#cone-docs-nav .prev-next {
    font-size: 16px;
    font-weight: 600;
}
#cone-docs-nav .topless {
    font-weight: 300;
}
#cone-docs-nav .previous::before {
    content: '<< ';
    width: 100%;
    font-weight: 300;
}
#cone-docs-nav .next::before {
    content: '>> ';
    width: 100%;
    font-weight: 300;
}

/** main area **/

/* XXX: grid template areas for media queries */
.cone-main {
    grid-template-areas: "content toc";
    grid-template-columns: 4fr 1fr;
    grid-template-rows: auto 1fr;
}
.cone-main {
    display: grid;
    grid-area: main;
}
.cone-content {
    grid-area: content;
}
.cone-toc {
    grid-area: toc;
}
.cone-toc {
    position: -webkit-sticky;
    position: sticky;
    top: 5rem;
    right: 0;
    z-index: 2;
    height: calc(100vh - 7rem);
    overflow-y: auto;
}

/**  media queries XXX: split up **/
@media (min-width: 992px) {
    #cone-layout {
        grid-template-columns: 1fr 5fr;
    }
}

@media (min-width: 769px) {
    #cone-navbar {
        display: none;
    }
    #cone-layout {
        display: grid;
        gap: 1.5rem;
        grid-template-areas: "sidebar main";
        grid-template-columns: 1fr 3fr;
    }
    #logo {
        max-width: calc(100% - 500px)!important;
    }

    #cone-docs-nav {
        position: -webkit-sticky;
        position: sticky;
        top: 5rem;
        display: block !important;
        height: calc(100vh - 7rem);
        padding-left: .25rem;
        margin-left: -.25rem;
        overflow: auto;
        font-weight: 600;
    }
}

@media (max-width: 768px) {
    #logo {
        max-width: calc(100% - 300px)!important;
    }
    #cone-layout {
        padding: 1rem;
    }
    #searchbox {
        max-width: none;
        color: black;
    }

    /* cone-title still needed? */
    .cone-title {
        float: none!important;
    }
    li.right {
        border-bottom: 1px solid {{ theme_header_color }}!important;
    }
}

@media (max-width: 400px) {
    #nav_links {
        display: none!important;
    }
    #logo {
        max-width: calc(100% - 100px)!important;
    }
}

/* cone-title still needed? */
.cone-title {
    float: left;
}
